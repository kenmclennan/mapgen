{
    "compilerOptions": {
        "alwaysStrict": true,
        "declaration": true,
        "declarationDir": "./dist",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "lib": [
            "dom",
            "es5",
            "es6"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "target": "es5",
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
        "src/**/*test.ts",
        "src/__tests__/*"
    ]
}
